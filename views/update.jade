extends layout

block content
	div.container
		div.jumbotron
			div.page-header
				h2 Actualizar Productos

		form.form-horizontal(method='post', role='form')

			div.form-group 
					label.col-sm-4 Nombre del Producto:
					div.col-sm-8
						input.form-control(
						type="text",
						name="producto",
						value="#{producto.producto}")
			div.form-group 
					label.col-sm-4 Descripcion:
					div.col-sm-8
						input.form-control(
						type="text",
						name="descripcion",
						value="#{producto.descripcion}")
			div.form-group 
					label.col-sm-4 Precio:
					div.col-sm-8
						input.form-control(
						type="text",
						name="precio",
						value="#{producto.precio}")
			div.form-group
					div.col-sm-offset-4.col-sm-8
						button.btn.btn-primary Actualizar
